<h1>Log in!</h1>

<form action="/session" method="POST" class="form">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="user_username" class="form-group">Username</label>
  <input class="form-control" type="text" name="user[username]" id="user_username">
  <br>

  <label for="user_password" class="form-group">Password</label>
  <input class="form-control" type="password" name="user[password]" id="user_password">
  <br>

  <input class="btn btn-default" type="submit" value="Log in!">
</form>

<%= link_to "New User", new_user_url %>
