<h1>Create a Rental Request</h1>

<form class="" action="/cat_rental_requests" method="post">
    <label>Cat:</label>
    <br>
    <select name="cat_rental_request[cat_id]">
       <% @cats.each do |cat| %>
        <option value=<%= cat.id %> >
          <%= cat.name %>
        </option>
       <%end %>
     </select>
     <br>

     <label>Start Date:</label>
     <br>
     <input type="date"
            name="cat_rental_request[start_date]"
            value=<%= Time.now %>>
     <br>

     <label>End Date:</label>
     <br>
     <input type="date"
            name="cat_rental_request[end_date]"
            value=<%= Time.now + 3.days %>>
     <br>

    <input type="submit">
</form>
